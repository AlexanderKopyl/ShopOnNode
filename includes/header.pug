nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
    .container
        a(class="navbar-brand" href="#") Navbar
        button(
            class="navbar-toggler"
            type="button" data-toggle="collapse"
            data-target="#navbar1" aria-controls="navbar1" aria-expanded="false" aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
        .collapse.navbar-collapse(id="navbar1")
            ul(class="navbar-nav mr-auto")
                li(class="nav-item active")
                    a(class="nav-link" href="/") Home
                        span(class="sr-only")
                li(class="nav-item")
                    a(class="nav-link" href="#") Blog
                    li(class="nav-item dropdown")
                        a(
                            class="nav-link dropdown-toggle" href="/categories" id="navbarDropdown1"
                            role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Categories
                        .dropdown-menu(aria-labelledby="navbarDropdown1")
                            each val in categories
                                a(class="dropdown-item" href="#") #{val.name}
